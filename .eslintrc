rules:
  indent:
    - 2
    - 4
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  curly: 0
  no-underscore-dangle: 0
  no-shadow: 0
  no-process-exit: 0
  handle-callback-err: 0
  consistent-return: 0
  camelcase: 0
  new-cap: 0
env:
  es6: true
  node: true
ecmaFeatures:
  modules: true